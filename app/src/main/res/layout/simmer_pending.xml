<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- recycler_item.xml -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/orderimg"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_76sdp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dark_gray" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/view4">

                <View
                    android:id="@+id/textView20"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_18sdp"
android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/dark_gray"
                    />


                <View
                    android:id="@+id/textView211"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_18sdp"
android:layout_marginStart="@dimen/_3sdp"
                    android:background="@drawable/dark_gray"
                    />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <View
                    android:id="@+id/textView201"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/dark_gray"
                    />


                <View
                    android:id="@+id/textView2112"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:background="@drawable/dark_gray"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/orderaccept"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/dark_gray"
                android:text="View"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49" />

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/dark_gray"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toStartOf="@+id/orderaccept"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/orderimg"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
